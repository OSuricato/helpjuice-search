<div class="container">
  <div class="d-flex justify-content-center pt-5 my-5">
    <h1>The Article Database</h1>
  </div>
  <div class="row justify-content-center">
  <div class="col-sm-8 my-5">
  <h5>Looking for something specific?</h5>
    <%= form_with url: articles_index_path, method: :get, class: "d-flex", id: "search-form" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an article"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="articles">
        <% if @articles.any? %>
          <% @articles.each do |article| %>
            <h4><%= article.title %></h4>
            <p><%= article.author.first_name %> <%= article.author.last_name %>, <%= article.year %></p>
            <p><%= article.content %></p>
          <% end %>
        <% else %>
          <em>Sorry, no articles found.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>
